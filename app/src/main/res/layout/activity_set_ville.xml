<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setVilleActivity">

    <TextView
        android:id="@+id/indications_saisie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter une ville:"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="314dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ville_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Saisissez votre ville..."
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/indications_saisie"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="390dp" />

    <Button
        android:id="@+id/button_add_ville"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="478dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>