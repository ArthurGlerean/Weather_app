<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setVilleActivity">

    <TextView
        android:id="@+id/indications_saisie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Ajouter une ville:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ville_input"
        android:layout_width="203dp"
        android:layout_height="75dp"
        android:layout_marginTop="12dp"
        android:hint="Saisissez votre ville..."
        app:layout_constraintStart_toStartOf="@+id/indications_saisie"
        app:layout_constraintTop_toBottomOf="@id/indications_saisie"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_add_ville"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        app:layout_constraintBottom_toBottomOf="@+id/ville_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toEndOf="@+id/ville_input"
        app:layout_constraintTop_toTopOf="@+id/ville_input"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>